<form id="login_form" method="post" action="login">
	{{#if error}}
		<div class="alert alert-danger" id="formError">{{{error}}}</div>
	{{/if}}
	<div class="form-group">
		<label for="username" data-toggle="tooltip" title="Username">Username:</label>
	{{#if lastUsername}}
		<input type="text" class="form-control" name="username" id="username" data-toggle="tooltip" title="" value="{{lastUsername}}">
	{{else}}
		<input type="text" class="form-control" name="username" id="username" data-toggle="tooltip" title="">
	{{/if}}
	</div>
	<div class="form-group">
		<label for="password" data-toggle="tooltip" title="">Password:</label>
		<input type="password" class="form-control" name="password" id="password" data-toggle="tooltip" title="">
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
	<a href="/register">Register New Account</a>
</form>
